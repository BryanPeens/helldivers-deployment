<div class="row">
  {{#if projects.length}}
  <div class="col-md-6">
    <h3>Current Loadouts:</h3>
    <div class="card-flex-container">
      {{#each projects as |project|}}
      <div class="card">
        <br />
        <div>
          <img src="/images/badge.png" alt="Person" class="badge-image" />
          <p class="m-0" style="display: inline-block;">{{project.name}}</p>
          <p class="m-0">{{project.battle_level}}</p>
          <p class="m-0">{{project.description}}</p>
        </div>
        <br />
        <img src={{project.avatar_image}} alt="Person" class="card__image_1">
        <div class="grid-container">
          <div class="grid-child-wins">
            1156 WINS
          </div>
          <div class="grid-child-losses">
            1012 LOSSES
          </div>
        </div>
        <ul class="social-icons">
          <li><a href="#"><img src={{project.stratagem_image}} alt="Stratagem" class=""></a></li>
          <li><a href="#"><img src={{project.orbital_cannon_image}} alt="Cannons" class=""></a></li>
          <li><a href="#"><img src={{project.hangar_image}} alt="Hangar" class=""></a></li>
          <li><a href="#"><img src={{project.bridge_image}} alt="Bridge" class=""></a></li>
        </ul>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
</div>
